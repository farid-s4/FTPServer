<Window x:Class="CloudClient.View.RenameDirPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CloudClient.View"
        mc:Ignorable="d"
        Title="RenameDirPage" Height="290" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Border CornerRadius="10" Padding="20">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" >
                <TextBlock Text="Переименование директории" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="#333" 
                           TextAlignment="Center" 
                           Margin="0,0,0,10"/>

                <TextBlock Text="Введите имя директории:" 
                           FontSize="14" 
                           Foreground="#555"/>

                <TextBox Text="{Binding DirName}" 
                         Height="30" 
                         FontSize="14" 
                         Padding="5" 
                         Margin="0,0,0,10"/>

                <TextBlock Text="Выберите директорию которую надо переименовать:" 
                           FontSize="12" 
                           Foreground="#555"/>

                <ComboBox ItemsSource="{Binding Roots}"
                          SelectedItem="{Binding SelectedRoot}"
                          Height="30"
                          FontSize="14"
                          Padding="5"
                          Margin="0,0,0,15"/>

                <Button Content="Переименовать"
                        Command="{Binding RenameDirCommand}"
                        Height="35"
                        FontSize="14"
                        HorizontalAlignment="Center"
                        Width="150"
                        Padding="5"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
